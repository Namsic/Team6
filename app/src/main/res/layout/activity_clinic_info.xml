<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/tv_info_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_info_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_info_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:textSize="20sp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="#000000"
        android:stretchColumns="2">
        <TextView
            android:text = "운영 시간"
            android:gravity="center"
            android:background="#DDDDDD"
            android:layout_marginBottom="1dp"/>
        <TableRow
            android:background="#DDDDDD"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="월 ~ 금"/>
            <TextView
                android:id="@+id/tv_info_time_week"
                android:gravity="center_vertical"/>
        </TableRow>
        <TableRow
            android:background="#DDDDDD"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="토"/>
            <TextView
                android:id="@+id/tv_info_time_sat"
                android:gravity="center_vertical"/>
        </TableRow>

        <TableRow
            android:background="#DDDDDD">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="일"/>
            <TextView
                android:id="@+id/tv_info_time_sun"
                android:gravity="center_vertical"/>
        </TableRow>
    </TableLayout>
</LinearLayout>